generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("DATABASE_SHADOW_URL")
}

model Order {
  id            Int       @id @default(autoincrement())
  name          String?
  surname       String?
  email         String?
  phone         String?
  age           Int?
  course        String?
  course_format String?
  course_type   String?
  status        String?
  sum           Int?
  alreadyPaid   Int?
  group         Group?    @relation(fields: [groupId], references: [id])
  groupId       Int?
  created_at    DateTime?
  utm           String?
  msg           String?
  manager       User?     @relation("ManagerToOrder", fields: [userId], references: [id])
  roleId        Role?     @map("role")
  userId        Int?

  @@map("orders")
}

model Group {
  id     Int     @id @default(autoincrement())
  name   String? @unique
  orders Order[]

  @@map("groups")
}

enum Role {
  ADMIN
  MANAGER
}

model User {
  id            Int     @id @default(autoincrement())
  email         String  @unique
  password      String
  role          Role
  firstName     String?
  lastName      String?
  phone         String?
  managedOrders Order[] @relation("ManagerToOrder")

  @@map("users")
}



